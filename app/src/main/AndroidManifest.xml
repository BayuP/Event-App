<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.event">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/my_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="EventApp"
            android:theme="@style/NoBars">

        </activity>
        <activity
            android:name=".PenyediaActivity"
            android:label="Daftar Acara" />
        <activity
            android:name=".PesertaActivity"
            android:label="Daftar Acara" />
        <activity
            android:name=".BuatAcaraActivity"
            android:label="Buat Acara"
            android:parentActivityName=".PenyediaActivity" />
        <activity
            android:name=".DetailAcaraPenyedia"
            android:label="Acara"
            android:parentActivityName=".PenyediaActivity" />
        <activity
            android:name=".DetailAcaraPeserta"
            android:label="Acara"
            android:parentActivityName=".PesertaActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/NoBars">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

    </application>

</manifest>